<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/moneyAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text="@string/text_money_amount"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/MontoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moneyAmount"
        tools:text="0" />

    <ImageView
        android:id="@+id/Moneda5"
        android:layout_width="124sp"
        android:layout_height="124sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Moneda10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MontoTotal"
        app:layout_constraintVertical_bias="0.144"
        app:srcCompat="@drawable/five_cents"
       />

    <ImageView
        android:id="@+id/Moneda10"
        android:layout_width="124sp"
        android:layout_height="124sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Moneda5"
        app:layout_constraintTop_toBottomOf="@+id/MontoTotal"
        app:layout_constraintVertical_bias="0.141"
        app:srcCompat="@drawable/ten_cents" />

    <ImageView
        android:id="@+id/Moneda25"
        android:layout_width="124sp"
        android:layout_height="124sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Moneda1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Moneda5"
        app:layout_constraintVertical_bias="0.252"
        app:srcCompat="@drawable/quarter" />

    <ImageView
        android:id="@+id/Moneda1"
        android:layout_width="124sp"
        android:layout_height="124sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Moneda25"
        app:layout_constraintTop_toBottomOf="@+id/Moneda10"
        app:layout_constraintVertical_bias="0.245"
        app:srcCompat="@drawable/one_dollar" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="-10dp"
        />

    <TextView
        android:id="@+id/text_view_0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_05"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/Moneda10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Moneda5"
        />

    <TextView
        android:id="@+id/text_view_0.10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_010"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Moneda5"
        app:layout_constraintTop_toBottomOf="@+id/Moneda10"
        />

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_1"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Moneda1"
        app:layout_constraintHorizontal_bias="0.443"
        app:layout_constraintStart_toStartOf="@+id/Moneda1"
        app:layout_constraintTop_toBottomOf="@+id/Moneda1"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/text_view_0.25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_025"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Moneda25"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="@+id/Moneda25"
        app:layout_constraintTop_toBottomOf="@+id/Moneda25"
        app:layout_constraintVertical_bias="0.0"
        />

</androidx.constraintlayout.widget.ConstraintLayout>